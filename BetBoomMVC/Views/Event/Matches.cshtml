@model EventViewModel


<style>
    .container2 {
        display: flex;
        justify-content: space-between;
    }

    .main-content {
        flex-grow: 1;
        padding: 20px;
        background-color: #15181C;
        margin-right: 20px;
        display: flex;
        flex-direction: column;
        align-items: center; /* Добавлено для выравнивания содержимого по центру */
    }

        .main-content img {
            max-width: 60%;
            margin-bottom: 20px;
        }

    ul {
        list-style: none;
        text-align: right;
        margin: 0;
        padding: 0;
    }

        ul li {
            font-size: 16px;
            color: #FFD700; /* Изменен цвет текста */
        }

    .sidebar {
        width: 300px;
        padding: 20px;
        background-color: #15181C;
        text-align: center;
    }

    .nav-list {
        list-style: none;
        padding: 0;
    }

    .nav-item {
        padding: 10px 0;
        text-align:center;
    }

    .nav-link2 {
        text-decoration: none;
        color: #FFD700;
        font-weight: bold;
    }

    .nav-link3 {
        text-decoration: none;
        color: #FFD700;
        font-weight: bold;
        font-size: 26px;
    }

    .nav-link2:hover {
        color: #ff5733;
    }

    .image-container {
        margin-top: 50px;
        margin-right: 50px;
        display: flex;
        justify-content: space-between;
    }

        .image-container img {
            max-width: 60%;
            margin-bottom: 20px;
        }
</style>
<div class="container2">
    <div class="main-content">
        <h1 style="text-align: center;">@Model.League.Name</h1>

        <ul>
            @foreach (var ev in Model.Events)
            {
                @if (!ev.IsFinished)
                {
                    <li class="nav-item">

                    <span style="color: #ff5733;">@ev.Schedule.ToString("dd.MM.yyyy HH:mm")</span><br>
                    <a class="nav-link3" href="@Url.Action("Details", "Event", new { eventId = ev.Id })">@ev.Name</a>
                </li>
                }
            }
        </ul>
    </div>


    <div class="sidebar">
        <h2>Лиги</h2>
        <ul style="text-align:center;">
            @foreach (var league in Model.Leagues)
            {
                <li class="nav-item">
                    <a class="nav-link3" href="@Url.Action("Matches", "Event", new { leagueId = league.Id })">@league.Name</a>
                </li>
            }
        </ul>
    </div>
</div>
