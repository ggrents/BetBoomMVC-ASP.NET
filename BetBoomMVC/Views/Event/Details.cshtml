@model EventDetailsViewModel


<style>
    .container2 {
        display: flex;
        justify-content: space-between;
    }

    .main-content {
        border: 2px solid #ff5733;
        flex-grow: 1;
        padding: 20px;
        background-color: #15181C;
        margin-right: 20px;
        display: flex;
        flex-direction: column;
        align-items: center; /* Добавлено для выравнивания содержимого по центру */
    }

        .main-content img {
            max-width: 60%;
            margin-bottom: 20px;
        }

    ul {
        list-style: none;
        text-align: right;
        margin: 0;
        padding: 0;
    }

        ul li {
            font-size: 16px;
            color: #FFD700; /* Изменен цвет текста */
        }

    .sidebar {
        width: 300px;
        padding: 20px;
        background-color: #15181C;
        text-align: center;
        border: 2px solid #ff5733;
    }

    .nav-list {
        list-style: none;
        padding: 0;
    }

    .nav-item {
        padding: 10px 0;
        text-align: center;
    }

    .nav-outcomes {
        padding: 10px 0;
        text-align: center;
        display : flex;
    }


    .nav-link2 {
        text-decoration: none;
        color: #FFD700;
        font-weight: bold;
    }

    .nav-link3 {
        text-decoration: none;
        color: #FFD700;
        font-weight: bold;
        font-size: 26px;
    }

    .nav-outcomes {
        list-style: none;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #000;
        width: calc(20% - 20px); /* Уменьшаем ширину */
        box-sizing: border-box;
        display: inline-block;
        vertical-align: top;
        text-align: center;
        margin: 15px; /* Уменьшаем отступы */
    }

    .nav-link13 {
        text-decoration: none;
        color: #ff0;
        font-weight: bold;
        display: block;
        margin-bottom: 8px;
    }


    .nav-link2:hover {
        color: #ff5733;
    }

  
</style>
<div class="container2">
    <div class="main-content">
        <h1 style="text-align: center;">@Model.Event.Name</h1>

        <ul>
            @foreach (var ev in Model.Outcomes)
            {
                <li class="nav-outcomes">


                    <a class="nav-link13" href="@Url.Action("MakeBet", "Bet", new { outcomeId = ev.Id })">@ev.Name</a>
                    <span style="color: #ff5733;">@ev.Coefficient</span><br>
                </li>
            }
        </ul>
    </div>


    <div class="sidebar">
        <h2>Лиги</h2>
        <ul style="text-align:center;">
            @foreach (var league in Model.Leagues)
            {
                <li class="nav-item4">
                    <a class="nav-link3" href="@Url.Action("Matches", "Event", new { leagueId = league.Id })">@league.Name</a>
                </li>
            }
        </ul>
    </div>
</div>
